<h1>Edit</h1>

<form method="POST" action="/users/:slug/workouts/<%= @workout.id %>">
  <input type="hidden" name="_method" value="patch">
  <label for="name">Name</label>
    <input type="text" name="name" id="name" value="<%= @workout.name %>">
  <label for="date">Date</label>
    <input type="text" name="date" id="datepicker" value="<%= @workout.date %>">
    <br/>
    <br/>
  <label>Add Exercises:</label> 
    
    <% @workout.exercises.each do |workout_exercise| %>
      <p>
        <label>Name:</label> 
         <select name="exercises[][name]" value="<%= workout_exercise.name %>">
          <% Exercise.all.each do |exercise| %>
            <option value="<%= exercise.name %>" <%= exercise.name == workout_exercise.name ? "selected" : nil %>> <%= exercise.name %></option>
          <% end %>
        </select>
          <label>Sets:</label> <input type="text" name="exercises[][sets]" id="exercises_sets" value="<%= workout_exercise.sets %>">
          <label>Reps:</label> <input type="text" name="exercises[][reps]" id="exercises_reps" value="<%= workout_exercise.reps %>" >
          <button type="button" class="remove">Remove</button>
      </p>
    
    <% end %>
    <p> 
      <button type="button" class="add">Add Exercise</button>
    </p>
    
    <input type="submit" value="Update" id="Update">
</form>